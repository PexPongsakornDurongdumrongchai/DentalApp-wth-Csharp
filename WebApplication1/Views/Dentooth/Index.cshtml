@model IEnumerable<WebApplication1.Models.Dentooth>;
@{
    ViewData["Title"] = "หน้าแรก";
}

@if (Model.Count() > 0)
{
    <h1 class="text-center">Detals</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>
                    รหัส
                </th>
                <th>
                    ชื่อ
                </th>
                <th>
                    สถานที่
                </th>
                <th>
                    แก้ไข
                </th>
                <th>
                    ลบ
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Dentals in Model)
            {

                <tr>
                    <td>
                        @Dentals.Id
                    </td>

                    <td>
                        @Dentals.Name
                    </td>

                    <td>
                        @Dentals.Description
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-controller="Dentooth" asp-action="Edit" asp-route-id="@Dentals.Id">แก้ไข</a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-controller="Dentooth" asp-action="Delete" asp-route-id="@Dentals.Id" onclick="return confirm('คุณต้องการลบ @Dentals.Name หรือไม่?')">ลบ</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else{


    <div class="alert alert-secondary">ไม่มีข้อมูล สถานทันตกรรม ในระบบ</div>
}